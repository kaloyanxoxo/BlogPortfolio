<p id="notice"><%= notice %></p>

<h1 class="posts_header">Categories</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

    </thead>
        <% @categories.each do |category| %>
        <div class="well col-xs-8 col-xs-offset-2">
          <header>
            <p class="date"><%= category.created_at.strftime('%A, %b, %d') %></p>
            <h1 class="post_title"><%= link_to category.title, category_path(category) %></h1>
          </header>
        </div>
        <% end %>
</table>

<br>
<div class="wel col-xs-8 col-xs-offset-2">
  <div class = "buttons">
    <%= link_to 'New Category', new_category_path, class: "btn btn-success" %>
  </div>
</div>
