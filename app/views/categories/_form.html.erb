<%= render  "partials/errors", obj: @category %>


<div class="row">
  <div class="col-xs-12">
    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :title %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :title, placeholder: "Enter Category Name" , class: "form-control" %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <%= form.submit class: "btn btn-primary" %>
        </div>
      </div>
  </div>
</div>
<% end %>
