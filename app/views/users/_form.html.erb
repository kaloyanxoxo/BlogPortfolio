
<%= render  "partials/errors", obj: @user %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :username %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :username, placeholder: "Enter Username" , class: "form-control"%>
        </div>      
      </div
        <br>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :email %>
        </div>
        <div class="col-sm-8">
          <%= form.email_field :email, placeholder: "Enter Email", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :password %>
        </div>
        <div class="col-sm-8">
          <%= form.password_field :password, placeholder: "Enter Password", class: "form-control" %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit (@user.new_record? ? "Sign Up" : "Edit Account"), class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
