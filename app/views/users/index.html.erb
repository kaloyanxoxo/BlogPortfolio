<h1 align="center">All Alpha Bloggers</h1>
<div align="center">
  <% @users.each do |user| %>
      <ul class="listing">
        <div class="row" align="center">
          <div class="well col-md-5 col-md-offset-3">
            <div class="col-md-2" align="center">
              <%= link_to gravatar_for(user), user_path(user)%> 
            </div>
            <div class="col-md-4 col-md-offset-2" align="center">
              <li><strong><%= link_to user.username, user_path(user) %></li></strong>
              <li><%= user.email %></li>
              <li><small><%= pluralize(user.posts.count, "posts") if user.posts %></small></li>
              <% if logged_in? && (current_user.admin? && current_user != user) %>
                <li><%= link_to "Delete User", user_path(user), method: :delete, 
                    data: { confirm: "Are you sure you want to delete this user and all user's articles?" },
                    class: "btn btn-md btn-danger"%></li>  
              <% end %>
            </div>
          </div>
        </div>
      </ul>
  <% end %>
  <%= will_paginate %>
</div>

