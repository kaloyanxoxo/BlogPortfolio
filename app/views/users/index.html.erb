<h1 align="center">All Alpha Bloggers</h1>
<div align="center">
  <% @users.each do |user| %>
      <ul class="listing">
        <div class="row" align="center">
          <div class="well col-md-5 col-md-offset-3">
            <div class="col-md-2" align="center">
              <%= link_to gravatar_for(user), user_path(user)%> 
            </div>
            <div class="col-md-4 col-md-offset-2" align="center">
              <li><%= link_to user.username, user_path(user) %></li>
              <li><%= user.email %></li>
              <li><small><%= pluralize(user.posts.count, "posts") if user.posts %></small></li>
            </div>
          </div>
        </div>
      </ul>
  <% end %>
</div>

