<p id="notice"><%= notice %></p>

<h1 class = "page_title">Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
        <% @posts.each do |post| %>
          <header>
            <p class="date"><%= post.created_at.strftime('%A, %b, %d') %></p>
            <h1 class = "post_title"><%= post.title.capitalize %></h1>
            <h5 class = "content"><%= truncate post.content, length: 50 %></h5>
            <h6 class = "buttons"><%= link_to "Read More", post , class: "btn btn primary " %></h6>
          </header>
          <div class = "buttons">
            <%= link_to 'Show', post, class: "btn btn-primary button" %> |
            <%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary button" %> |
            <%= link_to 'Destroy', post, class: "btn btn-danger button", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
            <hr>
        <% end %>
</table>

<br>
<div class = "buttons">
  <%= link_to 'New Post', new_post_path, class: "btn btn-success" %>
</div>