<h5 class="date" align="center"><%= @post.created_at.strftime('%A, %b, %d') %></h5>
<h2 aling="center" class="text-capitalize"><%= @post.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<h4 class="center description"><strong>Content:</strong></h4>	
	<hr>
	<%= simple_format(@post.content) %>
	<div class="post-info-time-user">
		<small align="center">
			Created by:<%= @post.user.username if @post.user %>  
		</small>
	</div>
	<div class = "post-actions">
		<%= link_to  "Edit", edit_post_path(@post), class: "btn btn-xs btn-primary" %>
		<%= link_to "Destroy", post_path(@post), class: "btn btn-xs btn-danger",
										 method: :delete, 
										 data: { confirm: "Are you sure you want to delete this post?"} %>
		<%= link_to  "View All Posts", posts_path, class: "btn btn-xs btn-success" %>								 
	</div>
</div>
