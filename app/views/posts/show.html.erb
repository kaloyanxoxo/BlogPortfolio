<header>
	<p class="date"><%= @post.created_at.strftime('%A, %b, %d') %></p>
	<h1><%= @post.title %></h1>
</header>
<br>
	<p align="center"><%= @post.content %></p>
<br>
<br>
<div class = "buttons">
	<%= link_to 'Back', posts_path, class: "btn btn-primary" %>
	<%= link_to 'Destroy', post_path(@post), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
</div>