  <header class = "header">
      <%= render 'partials/header' %>
  </header>
  <br>
  <% if flash.any? %>
    <%= render  "partials/messages" %>
    <% end %>
  <body class = "clearfix">  	
      <div class = "container">
        <%= yield %>
      </div>
  </body>
    <br>
  <footer>
    <%= render 'partials/footer' %>
  </footer>
</html>
