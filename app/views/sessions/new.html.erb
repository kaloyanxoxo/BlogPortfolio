<h1 align="center">Log In</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"},url: login_path) do |form| %>
<div class="form-group">
  <div class="control-label col-sm-2">
    <%= form.label :email %>
  </div>
  <div class="col-sm-8">
    <%= form.email_field :email, placeholder: "Enter Email" , class: "form-control", autofocus: true%>
  </div>      
</div
  <br>
<div class="form-group">
  <div class="control-label col-sm-2">
    <%= form.label :password %>
  </div>
  <div class="col-sm-8">
    <%= form.password_field :password, class: "form-control", autocomplete: "off" %>
  </div>
</div>
<br>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= form.submit "Log In", class: "btn btn-primary btn-lg" %>
  </div>
</div>
<% end %>